## List model name/type
model=fsfA

## Set type of fsf approach (trialwise, or basic)
type=A_task
#block=regulate

## Remove earlier feat directory?
removefeat="true"

# Loop through every scan collected so far
for sub in $subs; do
	echo $sub
	#if [ "$removefeat" == "true" ]
